<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LeetTranslater.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Enter code to translate" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry Text="Vertaal in de Leet taal!" x:Name="InputSentence"/>
        <Button Text="Translate" Clicked="TranslateToLeet" BackgroundColor="Gray" Padding="30,10,30,10"/>
        <Label x:Name="OutputSentence" FontSize="16" Padding="30,0,30,0"/>
        <Slider x:Name="LeetSlider" Minimum="0" Maximum="100"/><!-- Minimum moet 0 zijn-->
    </StackLayout>

</ContentPage>
