<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdventureTime.MainPage">

    <StackLayout>
        <Button
            Text="Enter the Adventure Time App"
            Clicked="NavigateToCharacters"
            BackgroundColor="Red"
            TextColor="Yellow"
            FontSize="20"/>
        <Button
            Margin="20"
            Text="Go to favorite character"
            Clicked="NavigateToFavoriteCharacter"
            BackgroundColor="Blue"
            TextColor="White"
            FontSize="18"/>
        <Button
            Margin="20"
            Text="Go to get character with id"
            Clicked="NavigateToGetCharacterWithIdPage"
            BackgroundColor="Blue"
            TextColor="White"
            FontSize="18"/>
    </StackLayout>

</ContentPage>
