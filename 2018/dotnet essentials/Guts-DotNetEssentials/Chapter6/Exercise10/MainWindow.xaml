        <Button Name="cancelButton" Click="CancelButton_Click" ToolTipService.ToolTip="Click me!" Content="Cancel" HorizontalAlignment="Left" Margin="84,283,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Name="okButton" Click="OkButton_Click" ToolTipService.ToolTip="Or me!" Content="OK" HorizontalAlignment="Left" Margin="387,283,0,0" VerticalAlignment="Top" Width="75"/>

        <ProgressBar Name="timerProgressBar" HorizontalAlignment="Left" Height="37" VerticalAlignment="Top" Width="499" Margin="8,10,0,0"/>
    </Grid>
</Window>
