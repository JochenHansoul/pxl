        <Label Name="nameLabel" Content="Naam:" HorizontalAlignment="Left" Margin="20,101,0,0" VerticalAlignment="Top"/>
        <Label Name="paswoordLabel" Content="Paswoord:" HorizontalAlignment="Left" Margin="20,193,0,0" VerticalAlignment="Top"/>

        <TextBox Name="nameTextBox" ToolTipService.ToolTip="This is a tooltip" HorizontalAlignment="Left" Height="23" Margin="168,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="207"/>
