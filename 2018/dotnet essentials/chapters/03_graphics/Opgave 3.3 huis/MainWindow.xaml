            <Line Name="leftDoorLine" X1="220" Y1="330" X2="220" Y2="240" Stroke="Bisque" StrokeThickness="4"/>
            <Line Name="topDoorLine" X1="220" Y1="240" X2="270" Y2="240" Stroke="Bisque" StrokeThickness="4"/>
            <Line Name="rightDoorLine" X1="270" Y1="240" X2="270" Y2="330" Stroke="Bisque" StrokeThickness="4"/>

            <Line Name="bottomWindowLine" X1="130" Y1="290" X2="180" Y2="290" Stroke="Bisque" StrokeThickness="4"/>
            <Line Name="leftWindowLine" X1="130" Y1="290" X2="130" Y2="240" Stroke="Bisque" StrokeThickness="4"/>
            <Line Name="topWihndowLine" X1="130" Y1="240" X2="180" Y2="240" Stroke="Bisque" StrokeThickness="4"/>
            <Line Name="rightWindowLine" X1="180" Y1="240" X2="180" Y2="280" Stroke="Bisque" StrokeThickness="4"/>
                        
        </Canvas>
    </Grid>
</Window>
